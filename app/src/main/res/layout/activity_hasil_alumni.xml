<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".alumni.HasilAlumniActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggapan Anda"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tanggapan_alumni_pg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggapan Anda"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tanggapan_alumni_essay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggapan Anda"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tanggapan_alumni_berguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggapan Anda"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tanggapan_alumni_perlu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggapan Anda"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tanggapan_alumni_sulit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggapan Anda"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/hasil_saran_alumni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="saran"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</ScrollView>